@page
@model ReportSystem.Pages.User.Logout


<div class="row justify-content-center">

    <div class="card col-sm-12 col-md-6">
        <div class="card-body align-items-center justify-content-center">

            <h1 class="display-4">Are you sure you want to logout?</h1><br/><hr/>


            <form method="post" class="row flex-row-reverse">
                <button class="btn btn-lg btn-outline-primary col-5 m-1" asp-page-handler="DontLogout">Cancel</button>
                <button class="btn btn-lg btn-outline-danger col-6 m-1" asp-page-handler="Logout">Logout</button>
            </form>


        </div>
    </div>

</div>