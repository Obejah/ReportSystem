@page
@model ReportSystem.Pages.User.Login

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row">
        <div class="col">
            <div asp-validation-summary="ModelOnly"></div>
            <form method="post">
                <div class="form-group">
                    <label asp-for="LoginUser.UserName"></label>
                    <input asp-for="LoginUser.UserName" type="text" class="form-control" id="username" aria-label="username" aria-describedby="basic-addon1" placeholder="Enter username">
                </div>
                <div class="form-group">
                    <label asp-for="LoginUser.Password"></label>
                    <input asp-for="LoginUser.Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
                <div class="form-check">
                    <input  asp-for="LoginUser.rememberMe" type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label asp-for="LoginUser.rememberMe" class="form-check-label" for="exampleCheck1"></label>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>